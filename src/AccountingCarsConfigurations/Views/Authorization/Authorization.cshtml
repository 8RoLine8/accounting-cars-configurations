@{
	ViewData["Title"] = "Authorization Page";
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Авторизация</title>
	<link rel="stylesheet" href="~/css/AuthorizationStyle.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
	<h1>Учет автомобильных комплектаций</h1>
	<div class="form-container">
		<h2>Авторизация</h2>
		<div class="form-floating mb-3">
			<input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
			<label for="floatingInput">Email</label>
		</div>
		<div class="form-floating">
			<input type="password" class="form-control" id="password-input" placeholder="Password">
			<label for="floatingPassword">Пароль</label>
		</div>
		<label><input type="checkbox" class="password-checkbox"> Показать пароль</label>
		<div>
			<button type="button" class="btn btn-success">Войти</button>
		</div>
		
	</div>

	<script>
		$(document).ready(function () {
			$('.password-checkbox').change(function () {
				var passwordInput = $('#password-input');
				var isChecked = $(this).is(':checked');

				if (isChecked) {
					passwordInput.attr('type', 'text');
				} else {
					passwordInput.attr('type', 'password');
				}
			});
		});
	</script>
</body>
</html>
