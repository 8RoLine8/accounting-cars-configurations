@model AccountingCarsConfigurations.Models.ViewModel.ReportViewModels;
@{
	ViewData["Title"] = "";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title></title>
	<link rel="stylesheet" href="~/css/ReportStyle.css"/>
</head>
<body>
	<h1>Отчет о комплектациях для автомобиля</h1>
	<hr class="line-divider"/>
	<h2>Автомобиль</h2>
	<p>@Model.СurrentCar.IdModelNavigation.IdManufacturerNavigation.Name</p>
	<p>@Model.СurrentCar.IdModelNavigation.Name</p>
	<p>@Model.СurrentCar.ProductionYear</p>
	<hr class="line-divider" />
	<h2>Информация о комплектациях</h2>
	<div class="accordion" id="accordionExample">
		@for (int i = 0; i < Model.ConfigurationsDetails.Count; i++)
		{
			<div class="accordion-item">
				<h2 class="accordion-header">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@i" aria-expanded="true" aria-controls="collapse-@i">
						@Model.ConfigurationsDetails[i].ConfigurationName | @Model.ConfigurationsDetails[i].ConfigurationPrice ₽
					</button>
				</h2>
				<div id="collapse-@i" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Модификация</th>
									<th>Описание</th>
									<th>Стоимость</th>
								</tr>
							</thead>
							<tbody>
								@for (int j = 0; j < Model.ConfigurationsDetails[i].ModificationsName.Length
										&& j < Model.ConfigurationsDetails[i].ModificationsDescription.Length
										&& j < Model.ConfigurationsDetails[i].ModificationsPrice.Length; j++)
								{
									<tr>
										<td>@Model.ConfigurationsDetails[i].ModificationsName[j]</td>
										<td>@Model.ConfigurationsDetails[i].ModificationsDescription[j]</td>
										<td>@Model.ConfigurationsDetails[i].ModificationsPrice[j]</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		}
	</div>
</body>
</html>