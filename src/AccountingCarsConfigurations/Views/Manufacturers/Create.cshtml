@{
	ViewData["Title"] = "Добавление производителя";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Добавление производителя</title>
	<link rel="stylesheet" href="~/css/ManufacturersStyle.css" />
</head>
<body>
	<h1>Добавление производителя</h1>
	<hr class="line-divider" />

	<form method="post" asp-action="Add">
		<div class="mb-3">
			<label for="Name" class="form-label">Наименования производителя</label>
			<input type="text" class="form-control" id="Name" name="Name" placeholder="Введите наименование производителя" required>
		</div>
		<div class="mb-3">
			<label for="Country" class="form-label">Страна</label>
			<input type="text" class="form-control" id="Country" name="Country" placeholder="Введите страну производителя" required>
		</div>
		<div class="mb-3">
			<label for="number" class="form-label">Номер телефона</label>
			<input type="number" class="form-control" id="numberPhone" name="number"
				   placeholder="Введите номер телефона представителя в Вашей стране" required>
		</div>
		<div class="mb-3">
			<label for="email" class="form-label">Email</label>
			<input type="email" class="form-control" id="email" name="email" placeholder="Введите почту производителя" required>
		</div>
		<div>
			<button type="submit" class="default-button">Добавить</button>
			<a class="default-button" href="/Manufacturers/Index">Отмена</a>
		</div>
	</form>
</body>
</html>
