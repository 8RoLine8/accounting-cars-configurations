@model AccountingCarsConfigurations.Models.ViewModel.ModelDetailsListViewModel;
@{
	ViewData["Title"] = "Информация о моделях";
}

<!DOOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Модели</title>
	<link rel="stylesheet" href="~/css/ModelsStyle.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
	<h1>Информация о моделях</h1>
	<hr class="line-divider" />
	<a class="default-button" href="/Models/Create">Добавить модель</a>
	<hr class="line-divider" />

	<div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>№</th>
					<th>Страна производства</th>
					<th>Производитель</th>
					<th>Модель</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
					@foreach (var item in Model.ModelDetails)
					{
					<tr>
						<td data-row-number></td>
						<td>@item.Manufacturer.Country</td>
						<td>@item.Manufacturer.Name</td>
						<td>@item.Model.Name</td>
						<td>
							<a class="default-button" href="/Models/Update/@item.Model.Id" title="Изменить">
								<i class="bi bi-pencil-fill"></i>
							</a>
							<a class="default-button" href="/Models/Delete/@item.Model.Id" title="Удалить"
							   onclick="return confirm('Вы действительно хотите удалить информацию об этой модели?')">
								<i class="bi bi-trash3-fill"></i>
							</a>
						</td>
					</tr>
					}
			</tbody>
		</table>
	</div>

	<script>
		var rows = document.querySelectorAll('tbody tr');
		rows.forEach(function (row, index) {
			var rowNumber = row.querySelector('[data-row-number]');
			rowNumber.textContent = index + 1;
		});
	</script>
</body>
</html>


