@model AccountingCarsConfigurations.Models.Category;
@{
	ViewData["Title"] = "Добавление категории модификации";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Добавление категории модицфикации</title>
	<link rel="stylesheet" href="~/css/CategoryStyle.css" />
</head>
<body>
	<h1>Добавление категории модицфикации</h1>
	<hr class="line-divider" />

	<form method="post" asp-action="Add">
		<div class="mb-3">
			<label for="Name" class="form-label">Наименование категории</label>
			<input type="text" class="form-control" id="Name" name="Name" placeholder="Введите наименование категории" required>
		</div>
		<div class="mb-3">
			<label for="Description" class="form-label">Описание</label>
			<input type="text" class="form-control" id="description" name="Description" placeholder="Описание категории" required>
		</div>
		<div>
			<button type="submit" class="default-button">Добавить</button>
			<a class="default-button" href="/Categories/Index">Отмена</a>
		</div>
	</form>
</body>
</html>
